<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".invitefragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite friends"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/invite"
        android:text="Share your awesome experience of learning with your friends"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

    <ImageView
        android:id="@+id/invit_image"
        android:layout_width="305dp"
        android:layout_height="310dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/invite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/share" />
    <TextView
        android:id="@+id/invite_via"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Invite via"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/invit_image"
        android:textAlignment="center"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fb"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:layout_marginLeft="82dp"
        android:src="@drawable/ic_fb_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/invite_via"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/whtsapp"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:src="@drawable/ic_telegram_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fb"
        app:layout_constraintTop_toBottomOf="@id/invite_via"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="MissingConstraints" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/telegram"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:src="@drawable/ic_mail_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/whtsapp"
        app:layout_constraintTop_toBottomOf="@id/invite_via"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="MissingConstraints" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:src="@drawable/ic_fb_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/telegram"
        app:layout_constraintTop_toBottomOf="@id/invite_via"
        app:layout_constraintVertical_bias="0.082"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>